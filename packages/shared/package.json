{
  "name": "@mise/shared",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "import": "./src/types/index.ts"
    },
    "./validation": {
      "types": "./src/validation/index.ts",
      "import": "./src/validation/index.ts"
    },
    "./src/*": {
      "types": "./src/*",
      "import": "./src/*"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/types/index.ts src/validation/index.ts --format esm --dts",
    "dev": "tsup src/index.ts src/types/index.ts src/validation/index.ts --format esm --dts --watch",
    "lint": "eslint src/ --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  }
}
