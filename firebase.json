{
  "hosting": {
    "site": "mise-prod-app",
    "public": "apps/web/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "mise-api",
          "region": "me-west1"
        }
      },
      {
        "source": "/uploads/**",
        "run": {
          "serviceId": "mise-api",
          "region": "me-west1"
        }
      },
      {
        "source": "/health",
        "run": {
          "serviceId": "mise-api",
          "region": "me-west1"
        }
      },
      {
        "source": "/grafana/**",
        "run": {
          "serviceId": "mise-grafana",
          "region": "me-west1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
