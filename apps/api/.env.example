NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# PostgreSQL
DATABASE_URL=postgresql://mise:mise@localhost:5432/mise

# MongoDB
MONGODB_URI=mongodb://localhost:27017/mise

# Redis
REDIS_URL=redis://localhost:6379

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# JWT
JWT_SECRET=change-this-to-a-secure-secret-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth
GOOGLE_CLIENT_ID=

# Frontend URL (used for invite links — must be set in production)
FRONTEND_URL=http://localhost:5173

# Admin
ADMIN_SECRET=dev-admin-secret-change-in-production

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=1 minute
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW=15 minutes

# Meta (WhatsApp Embedded Signup)
META_APP_ID=
META_APP_SECRET=

# Feature flags — comma-separated store IDs, '*' for all, or empty to disable
FEATURE_PRODUCTION=
FEATURE_WHATSAPP=
FEATURE_SMS=

# Email (Resend)
RESEND_API_KEY=
RESEND_FROM_EMAIL=Mise <no-reply@mise-en-place.shop>

# WhatsApp Business Cloud API
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# Logging
LOG_LEVEL=info
